<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:orientation="horizontal"
       android:background="@android:drawable/bottom_bar" android:paddingLeft="4.0dip"
       android:paddingTop="5.0dip" android:paddingRight="4.0dip"
       android:paddingBottom="1.0dip" android:layout_width="fill_parent"
       android:layout_height="wrap_content" android:layout_below="@+id/TextView01">
       <TextView android:id="@+id/statistics_title" android:layout_height="wrap_content" android:text="Statistics" android:layout_weight="1.0" android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
       <Button android:id="@+id/button_back" android:layout_width="0.0dip"
           android:layout_height="fill_parent" android:text="@string/back"
           android:layout_weight="1.0" />
   </LinearLayout>
   <LinearLayout android:orientation="horizontal"
       android:background="@android:drawable/bottom_bar" android:paddingLeft="4.0dip"
       android:paddingTop="5.0dip" android:paddingRight="4.0dip"
       android:paddingBottom="1.0dip" android:layout_width="fill_parent"
       android:layout_height="wrap_content" android:layout_below="@+id/TextView01">
       <TextView android:id="@+id/statistics_desc" android:layout_height="wrap_content" android:textColor="@color/BLACK" android:text="Just below you will see a current tally of statistics created from playing the game. Information on total damage done, creeps killed and similar numeric aggregations are listed here. Some of these are used as requirements to unlock achievements and rewards." android:layout_weight="1.0" android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
   </LinearLayout>
   <ListView  
       android:id="@android:id/list"
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content" />
   <TextView android:id="@android:id/empty"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="No statistics recorded yet, try again after playing your first game." />
</LinearLayout>